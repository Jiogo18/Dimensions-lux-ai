{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build/",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "build",
    "tests",
    "examples",
    "templates"
  ],
  "typeAcquisition": {
    "include": [
        "jest"
    ]
  }
}