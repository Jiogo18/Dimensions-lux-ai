{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build/",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "build",
    "examples",
    "templates",
    "src/Station/web/**/*"
  ]
}